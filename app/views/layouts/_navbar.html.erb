<div class='navbar navbar-default navbar-fixed-top'>
        <div class='container-fluid'>
            <div class='navbar-header'>
                <div class="col-xs-9 col-md-12">
                    <div class='navbar-brand'>
                        <a id='logo' href='/'><img id='logoImg' src='<%=asset_path("SC_logo.png") %>' class="img-responsive" alt="Sharing Connections Logo">
                        </a>
                    </div>
                </div>
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse" id="navbar">
            <ul class="nav nav-pills navbar-right custom-navbar">
                <% if logged_in? %>
                    <li role="presentation"><a href="/pickups">Home</a></li>
                    <li role="presentation"><a href="/reports">Reports</a></li>
                    <% if !is_entry? %>
                        <li role="presentation"><a href="/days">Schedule</a></li>
                    <% end %>
                    <li role="presentation" class="dropdown">
                         <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
                          Account<% if is_admin? %>s<% end %> <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <% if is_admin? %>
                                <li role="presentation"><a href="/users">Admin</a></li>
                            <% end %>
                            <li><%= link_to "Settings", {:controller => "users", :action => "edit", :id => current_user.id}%></li>
                            <li><%= link_to "Log out", logout_path, method: "delete" %></li>
                        </ul>
                    </li>
                <% elsif request.path != "/" && request.path != "/login" %>
                    <li role="presentation"><a href="/">Log In</a></li>
                <% end %>
            </ul>
        </div>
    </div>
</div>
<script>
    $(document).ready(function() {
         //Change menu class when on mobile device.
        //This fixes the issue with the dropdown not opening on mobile devices
          $(window).resize(function () {
            var viewportWidth = $(window).width();
            if (viewportWidth < 768) {
                $('.nav').addClass('navbar-nav').removeClass('nav-pills');
            } else {
                $('.nav').removeClass('navbar-nav').addClass('nav-pills');
            }
        });
    })
    </script>
