<% provide(:title, "New Pickup") %>
<%= render 'layouts/navbar' %>

 <!-- Main Content -->

    <div class="container white-container">
        <!-- head and subhead -->
        <div class="row">
            <div class="col-xs-12">
                
                <%= render 'layouts/flash_messages' %>  <!--Render any flash messages-->
                
                <h2>Add New Pickup</h2>
                <p>Enter donor and pickup item information in the fields below. Click 'Add Pickup' to submit the information.</p>
            </div>
        </div>
        <!-- main row container -->
        <div class="row">
            <%= form_for(@pickup) do |f| %>
            <!-- Donor info -->
            <div class="col-xs-12 col-md-6">
                <h4>Donor Information</h4>
                <div class="row">
                    <div class="col-xs-12 col-md-3">
                        <div class="form-group">
                            <label>Title</label>
                            <%=f.select(:donor_title, options_for_select(populate_title_options,:selected => 'None'),{},:class => "form-control")%>
                        </div>
                    </div>
                    <div class="col-xs-12 col-md-4">
                        <div class="form-group">
                            <label>First Name</label>
                            <%= f.text_field :donor_first_name, class: 'form-control' %>
                        </div>
                    </div>
                    <div class="col-xs-12 col-md-5">
                        <div class="form-group">
                            <label>Last Name</label>
                            <span class="red">*</span>
                            <%= f.text_field :donor_last_name, class: 'form-control' %>
                            
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 col-xs-12">
                        <div class="form-group">
                            <label>Phone Number</label>
                            <%= f.text_field :donor_phone, class: 'form-control', pattern: "[0-9]{10}", 
                            title: "phone numbers should be plain and 10 numbers long (I.E. 6305551234)"%>
                        </div>
                    </div>
                    <div class="col-xs-12 col-md-6">
                        <div class="form-group">
                            <label>Email Address</label>
                            <%= f.text_field :donor_email, class: 'form-control' %>
                        </div>
                    </div>
                </div>

                <h4>Pickup Address <span class="red">*</span></h4>
                <label>Warning: Please do not put city, state or zip in these lines, as they have their own fields.</label>
                <div class="row">
                    <div class="col-xs-12">
                        <div class="form-group">
                            <label>Line 1</label>
                            <%= f.text_field :donor_address_line1, class: 'form-control' %>
                        </div>
                    </div>
                    <div class="col-xs-12">
                        <div class="form-group">
                            <label>Line 2</label>
                            <%= f.text_field :donor_address_line2, class: 'form-control' %>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-8 col-md-5">
                        <div class="form-group">
                            <label>City<span class="red">*</span></label>
                            <%= f.text_field :donor_city, class: 'form-control' %>
                        </div>
                    </div>
                    <div class="col-xs-4 col-md-2">
                        <div class="form-group">
                            <label>State</label>
                             <%=f.select(:donor_state, options_for_select(populate_state_options,:selected => 'IL'),{},:class => "form-control")%>
                        </div>
                    </div>
                    <div class="col-xs-12 col-md-5">
                        <div class="form-group">
                            <label>Zip Code<span class="red">*</span></label>
                            <%= f.text_field :donor_zip, class: 'form-control' %>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-12">
                        <div class="form-group">
                            <label>Dwelling Type</label>
                             <%=f.select(:donor_dwelling_type, options_for_select([['Current Residence','Current Residence'], ['Selling/Moving Home','Selling/Moving Home'], ['Storage Facility','Storage Facility'], ['Other','Other']]),{},:class => "form-control")%>
                        </div>
                    </div>
                </div>
            </div>
            <!-- end left column -->

            <!-- Begin right column -->
            <div class="col-xs-12 col-md-6 ">
                <div class="row">
                    <div class="col-xs-12">
                        <h4>Enter the number of items and a brief description.</h4>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-12 col-md-4">
                        <div class="form-group">
                            <label>Number of Items <span class="red">*</span></label>
                            <%= f.number_field :number_of_items, :min => '1', :class => 'form_control' %>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-12">
                        <div class="form-group">
                            <label>Item Notes</label>
                            <%= text_area(:pickup, :item_notes, :cols => 150, :rows => 5, :class => 'form-control custom-control') %>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-12">
                        <div class="form-group">
                            <label>Donor Notes</label>
                            <%= text_area(:pickup, :donor_notes, :cols => 150, :rows => 5, :class => 'form-control custom-control') %>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group">
                        <div class="col-xs-6">
                            <%= f.submit "Add Pickup", class: "btn btn-success btn-block btn-wide extra-right-margin" %>
                        </div>
                        <div class="col-xs-6">
                            <a href="/pickups">
                                <btn class="btn btn-block btn-danger btn-md">Cancel</btn>
                            </a>
                        </div>
                    </div>
                    
                </div>
            </div>
            <!-- end right column -->
            <%end%>
        </div>
        <!-- End main row -->
    </div>
    <!-- end main -->